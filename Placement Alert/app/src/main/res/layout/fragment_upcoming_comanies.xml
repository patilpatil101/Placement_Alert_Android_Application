<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whitewallpaper"
    tools:context="btr.jsp.com.placementalert.UpcomingCompanies">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"

        android:layout_height="260dp"
        card_view:cardCornerRadius="4dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Upcoming Companies"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/textView"
        android:layout_gravity="left|top"
        android:textAlignment="center" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:id="@+id/framelayout2"
        android:background="@color/cardview_shadow_end_color"></FrameLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="398dp"
        android:id="@+id/listView_upcoming_companies"
        android:layout_gravity="left|top"
        android:paddingTop="40dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:choiceMode="singleChoice" />
    </android.support.v7.widget.CardView>
</RelativeLayout>
