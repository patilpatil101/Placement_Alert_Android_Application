<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/whitewallpaper"
    tools:context="btr.jsp.com.placementalert.OthersActivity"
    >

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/iv_about_cdac"
        android:src="@drawable/aboutcdaclogo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:id="@+id/iv_cdac_centers"
        android:src="@drawable/cdaccenterslogo"
        android:layout_below="@+id/btn_about_cdac"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="cdac centers"
        android:id="@+id/btn_cdac_centers"
        android:background="@color/colorAccent"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:textSize="15dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/btn_cdac_courses"
        android:layout_alignEnd="@+id/btn_cdac_courses" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/iv_cdac_courses"
        android:src="@drawable/cdaccourseslogo"
        android:layout_below="@+id/iv_cdac_centers"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="courses"
        android:id="@+id/btn_cdac_courses"
        android:background="@color/colorAccent"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:layout_marginLeft="15dp"
        android:textSize="15dp"
        android:layout_marginBottom="50dp"
        android:layout_alignBottom="@+id/iv_cdac_courses"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/iv_cdac_courses"
        android:layout_marginRight="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="ABOUT CDAC"
        android:id="@+id/btn_about_cdac"
        android:background="@color/colorAccent"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:layout_alignBottom="@+id/iv_about_cdac"
        android:layout_marginBottom="47dp"
        android:textSize="15dp"
        android:layout_alignStart="@+id/btn_cdac_centers"
        android:layout_alignEnd="@+id/btn_cdac_centers" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="C-DAC Information"
        android:id="@+id/textView12"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
